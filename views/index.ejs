<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="styles.css">
   <title>Recipe Finder</title>
</head>
<body>
   <h1>Click to find Random Recipe</h1>


 
   <form id="random_recipe" method="post" action="/randomrecipe">
       <button id="random_recipe" type="submit">Random Recipe Finder</button>
   </form>


   <div id="results">
       <% if (recipes) { %>
           <h2>Recipes:</h2>
           <ul>
               <% recipes.forEach(recipe => { %>
                   <li>
                       <strong><%= recipe.strMeal %></strong>
                       <p><%= recipe.strInstructions %></p>
                       <form action="/feedback" method="POST">


                           <input type="hidden" name="recipeName" value="<%= recipe.strMeal %>">
                           <input type="hidden" name="recipeInstruction" value="<%= recipe.strInstructions %>">
                           <label for="rating">Rating (1-5):</label>
                           <input type="number" name="rating" min="1" max="5" required>
                           <input type="text" name="feedback" placeholder="Your feedback..." required>
                           <button type="submit">Submit Feedback</button>
                       </form>
                   </li>
               <% }) %>
           </ul>
       <% } %>
       </div>
       <a href="/adminRemove">Remove Recipes</a>
</body>
</html>